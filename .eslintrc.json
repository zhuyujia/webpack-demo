{
  "extends": "google",
  "rules": {
    "comma-dangle":[2,"never"],
    "comma-spacing": [2, { "before": false, "after": true }],
    "brace-style": [2, "1tbs", { "allowSingleLine": true }],
    "comma-style": [2, "last"],
    "default-case": 2,
    "no-var": 0,
    "require-jsdoc": [1, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }],
    "linebreak-style": 0,
    "max-len": [1, {
      "code": 300,
      "tabWidth": 2,
      "ignoreUrls": true
    }],
    "camelcase": 1
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
